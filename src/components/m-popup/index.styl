.m
    &-overflow-hidden
        overflow hidden !important
    &-popup
        position fixed
        box-sizing border-box
        max-height 100%
        padding $popup-close-icon-padding
        overflow-y auto
        background-color $popup-background-color
        transition $popup-transition
        -webkit-overflow-scrolling touch
        word-wrap break-word
        &--center
            top 50%
            left 50%
            transform translate(-50%, -50%)
            &.m-popup--round
                border-radius $popup-round-border-radius
        &--top
            top 0
            left 0
            width 100%
            overflow hidden
            &.m-popup--round
                border-radius 0 0 $popup-round-border-radius $popup-round-border-radius
        &--right
            top 50%
            right 0
            transform translate(0, -50%)
            &.m-popup--round
                border-radius $popup-round-border-radius 0 0 $popup-round-border-radius
        &--bottom
            bottom 0
            left 0
            width 100%
            &.m-popup--round
                border-radius $popup-round-border-radius $popup-round-border-radius 0 0
        &--left
            top 50%
            left 0
            transform translate(0, -50%)
            &.m-popup--round
                border-radius 0 $popup-round-border-radius $popup-round-border-radius 0
        &--safe-area-inset-bottom
            // 适配ios11异形屏，记得 加viewpoint
            padding-bottom constant(safe-area-inset-bottom)
            padding-bottom env(safe-area-inset-bottom)
        &-slide-top-enter-active, &-slide-right-enter-active, &-slide-bottom-enter-active, &-slide-left-enter-active
            transition-timing-function ease-out
        &-slide-top-leave-active, &-slide-right-leave-active, &-slide-bottom-leave-active, &-slide-left-leave-active
            transition-timing-function ease-in
        &-slide-top-enter, &-slide-top-leave-active
            transform translate(0, -100%)
        &-slide-right-enter, &-slide-right-leave-active
            transform translate(100%, -50%)
        &-slide-bottom-enter, &-slide-bottom-leave-active
            transform translate(0%, 100%)
        &-slide-left-enter, &-slide-left-leave-active
            transform translate(-100%, -50%)
        &_close-icon
            position absolute
            z-index $popup-close-icon-z-index
            color $popup-close-icon-color
            font-size $popup-close-icon-size
            cursor pointer
            &:focus
                // 去除获得焦点边框变黄
                outline none
            &:active
                color $popup-close-icon-active-color
            &--top-left
                top $popup-close-icon-margin
                left $popup-close-icon-margin
            &--top-right
                top $popup-close-icon-margin
                right $popup-close-icon-margin
            &--bottom-left
                bottom $popup-close-icon-margin
                left $popup-close-icon-margin
            &--bottom-right
                right $popup-close-icon-margin
                bottom $popup-close-icon-margin