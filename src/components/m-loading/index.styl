
.m-loading
    position relative
    display inline-block
    color $loading-line-spin-off-color // 底下的spinner颜色以此为准
    vertical-align middle
    &_spinner
        display inline-block
        vertical-align middle // 两个行内元素都设置的话，中线对其
        &--circle
            animation spin $loading-spinner-animation-duration infinite linear
        &--spinner
            animation spin 1s infinite steps(12) // 使其进行8方位旋转
        &--line-spinner
            position relative
            width ($loading-line-spin-line-height / 4)
            height $loading-line-spin-line-height
            margin 0 ($loading-line-spin-line-height / 2)
            color inherit
            background currentColor // 会根据color（字体颜色来设置）
            animation line-spin $loading-line-spin-duration infinite ($loading-line-spin-duration / 3) // 中间柱子延迟750/3毫秒
            &::before, &::after
                content ' '
                position absolute
                display block
                width ($loading-line-spin-line-height / 4)
                height ($loading-line-spin-line-height / 1.5)
                background currentColor // 会根据color（字体颜色来设置）
                top 50%
                transform translateY(-50%)
                animation line-spin $loading-line-spin-duration infinite
            &::before
                left -($loading-line-spin-line-height / 2)
            &::after
                left ($loading-line-spin-line-height / 2)
                animation-delay ($loading-line-spin-duration / 1.5) // 最后柱子延迟750/1.5毫秒
    &_text
        display inline-block
        color $loading-text-color
        font-size $loading-text-font-size
        margin-left $padding-xs
        vertical-align middle // 垂直居中 中线对其
    &--vertical
        display flex
        flex-direction column
        align-items center
        justify-content: center
        .m-loading_text
            margin $padding-xs 0 0
    /*
     turn : 定义的动画名称
     1s : 动画时间
     linear : 动画以何种运行轨迹完成一个周期
     infinite :规定动画应该无限次播放
    */
    @keyframes spin
        0%
            transform rotate(0deg)
        100%
            transform rotate(359deg)
    @keyframes line-spin
        50%
            background rgb(255, 255, 255)
